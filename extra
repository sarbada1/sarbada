<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
	function getDuration(val) {
		$.ajax({
			type: "POST",
			url: "getDuration.php",
			data: 'course_id=' + val,
			success: function (data) {
				$("#course_duration").html(data);
				getPrice();

			}

		});
	}
	function getPrice(val) {
		$.ajax({
			type: "POST",
			url: "getPrice.php",
			data: 'duration_id=' + val,
			success: function (data) {
				$("#course_price").html(data);

			}
		});
	}
</script>

<body>
