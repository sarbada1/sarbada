		<a href="add_course.php" class="active">Add Course</a>
		<a href="display_course.php">Display Course</a>
		<a href="logout.php" class="logout">Logout</a>
	</nav>
	<h1>Student Course Form</h1>
	<form action="confirm_course.php" method="post">

		<label for="course">Course Title:</label>
		<select id="course" name="course" required onChange="getDuration(this.value);">
			<option value="" disabled selected>Select a course</option>
			<?php
			foreach ($result as $course) {
				?>
				<option value="<?php echo $course["id"]; ?>"><?php echo $course["title"]; ?></option>
				<?php
			}
			?>

		</select>
		<label for="course_duration">Course Duration(in months):</label>

		<select id="course_duration" name="course_duration" required onChange="getPrice(this.value);">

			<option value="" disabled selected>Select a course duration</option>

		</select>


		<div id="course_price" name="course_price">


		

